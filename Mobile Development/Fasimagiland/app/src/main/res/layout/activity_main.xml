<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Icon Group -->
    <LinearLayout
        android:id="@+id/icon_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">


        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_help"
            android:contentDescription="@string/icon_info_desc"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/icon_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            android:contentDescription="@string/icon_more_desc" />
    </LinearLayout>

    <!-- Image -->
    <ImageView
        android:id="@+id/main_image"
        android:layout_width="367dp"
        android:layout_height="351dp"
        android:layout_below="@id/icon_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/image_main" />

    <!-- First Text -->
    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/text_main1"
        android:fontFamily="@font/patrickhand_regular"
        android:textSize="24sp"
        android:textColor="@color/dark_blue2"
        android:textAlignment="center"
        android:gravity="center" />

    <!-- Second Text -->
    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/text_main2"
        android:textSize="16sp"
        android:fontFamily="@font/patrickhand_regular"
        android:textColor="@color/dark_blue2"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:gravity="center" />

    <!-- Button -->
    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/text_btn_main"
        android:textColor="@android:color/white" />

</RelativeLayout>
